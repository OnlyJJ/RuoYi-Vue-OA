<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.im.chat.mapper.SystemMessageMapper">
    
    <resultMap type="SystemMessage" id="SystemMessageResult">
        <result property="id"    column="id"    />
        <result property="sendId"    column="send_id"    />
        <result property="recvId"    column="recv_id"    />
        <result property="content"    column="content"    />
        <result property="status"    column="status"    />
        <result property="sendTime"    column="send_time"    />
        <result property="type"    column="type"    />
        <result property="createId"    column="create_id"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectSystemMessageVo">
        select id, send_id, recv_id, content, status, send_time, type, create_id, create_time from t_im_system_message
    </sql>

    <select id="selectSystemMessageList" parameterType="SystemMessage" resultMap="SystemMessageResult">
        <include refid="selectSystemMessageVo"/>
        <where>  
            <if test="sendId != null "> and send_id = #{sendId}</if>
            <if test="recvId != null  and recvId != ''"> and recv_id = #{recvId}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="sendTime != null "> and send_time = #{sendTime}</if>
            <if test="type != null "> and type = #{type}</if>
            <if test="createId != null "> and create_id = #{createId}</if>
        </where>
    </select>
    
    <select id="selectSystemMessageById" parameterType="String" resultMap="SystemMessageResult">
        <include refid="selectSystemMessageVo"/>
        where id = #{id}
    </select>

    <insert id="insertSystemMessage" parameterType="SystemMessage">
        insert into t_im_system_message
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">id,</if>
            <if test="sendId != null">send_id,</if>
            <if test="recvId != null">recv_id,</if>
            <if test="content != null">content,</if>
            <if test="status != null">status,</if>
            <if test="sendTime != null">send_time,</if>
            <if test="type != null">type,</if>
            <if test="createId != null">create_id,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">#{id},</if>
            <if test="sendId != null">#{sendId},</if>
            <if test="recvId != null">#{recvId},</if>
            <if test="content != null">#{content},</if>
            <if test="status != null">#{status},</if>
            <if test="sendTime != null">#{sendTime},</if>
            <if test="type != null">#{type},</if>
            <if test="createId != null">#{createId},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateSystemMessage" parameterType="SystemMessage">
        update t_im_system_message
        <trim prefix="SET" suffixOverrides=",">
            <if test="sendId != null">send_id = #{sendId},</if>
            <if test="recvId != null">recv_id = #{recvId},</if>
            <if test="content != null">content = #{content},</if>
            <if test="status != null">status = #{status},</if>
            <if test="sendTime != null">send_time = #{sendTime},</if>
            <if test="type != null">type = #{type},</if>
            <if test="createId != null">create_id = #{createId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSystemMessageById" parameterType="String">
        delete from t_im_system_message where id = #{id}
    </delete>

    <delete id="deleteSystemMessageByIds" parameterType="String">
        delete from t_im_system_message where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>