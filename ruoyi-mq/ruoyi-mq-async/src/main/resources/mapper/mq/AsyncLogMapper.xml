<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.mq.mapper.AsyncLogMapper">
    
    <resultMap type="AsyncLog" id="AsyncLogResult">
        <result property="id"    column="id"    />
        <result property="beanName"    column="bean_name"    />
        <result property="exchangeKey"    column="exchange_key"    />
        <result property="routingKey"    column="routing_key"    />
        <result property="messageContent"    column="message_content"    />
        <result property="apiPrefix"    column="api_prefix"    />
        <result property="businessId"    column="business_id"    />
        <result property="businessType"    column="business_type"    />
        <result property="failReason"    column="fail_reason"    />
        <result property="status"    column="status"    />
        <result property="retryTime"    column="retry_time"    />
        <result property="executeTime"    column="execute_time"    />
        <result property="createId"    column="create_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateId"    column="update_id"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectAsyncLogVo">
        select id, bean_name, exchange_key, routing_key, message_content, api_prefix, business_id, business_type, fail_reason, status, retry_time, execute_time, create_id, create_time, update_id, update_time from t_mq_async_log
    </sql>

    <select id="selectAsyncLogList" parameterType="AsyncLog" resultMap="AsyncLogResult">
        <include refid="selectAsyncLogVo"/>
        <where>  
            <if test="beanName != null  and beanName != ''"> and bean_name like concat('%', #{beanName}, '%')</if>
            <if test="exchangeKey != null  and exchangeKey != ''"> and exchange_key = #{exchangeKey}</if>
            <if test="routingKey != null  and routingKey != ''"> and routing_key = #{routingKey}</if>
            <if test="messageContent != null  and messageContent != ''"> and message_content = #{messageContent}</if>
            <if test="apiPrefix != null  and apiPrefix != ''"> and api_prefix = #{apiPrefix}</if>
            <if test="businessId != null  and businessId != ''"> and business_id = #{businessId}</if>
            <if test="businessType != null  and businessType != ''"> and business_type = #{businessType}</if>
            <if test="failReason != null  and failReason != ''"> and fail_reason = #{failReason}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="retryTime != null "> and retry_time = #{retryTime}</if>
            <if test="executeTime != null "> and execute_time = #{executeTime}</if>
            <if test="createId != null "> and create_id = #{createId}</if>
            <if test="updateId != null "> and update_id = #{updateId}</if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectAsyncLogById" parameterType="String" resultMap="AsyncLogResult">
        <include refid="selectAsyncLogVo"/>
        where id = #{id}
    </select>

    <insert id="insertAsyncLog" parameterType="AsyncLog">
        insert into t_mq_async_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">id,</if>
            <if test="beanName != null">bean_name,</if>
            <if test="exchangeKey != null">exchange_key,</if>
            <if test="routingKey != null">routing_key,</if>
            <if test="messageContent != null">message_content,</if>
            <if test="apiPrefix != null">api_prefix,</if>
            <if test="businessId != null">business_id,</if>
            <if test="businessType != null">business_type,</if>
            <if test="failReason != null">fail_reason,</if>
            <if test="status != null">status,</if>
            <if test="retryTime != null">retry_time,</if>
            <if test="executeTime != null">execute_time,</if>
            <if test="createId != null">create_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateId != null">update_id,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">#{id},</if>
            <if test="beanName != null">#{beanName},</if>
            <if test="exchangeKey != null">#{exchangeKey},</if>
            <if test="routingKey != null">#{routingKey},</if>
            <if test="messageContent != null">#{messageContent},</if>
            <if test="apiPrefix != null">#{apiPrefix},</if>
            <if test="businessId != null">#{businessId},</if>
            <if test="businessType != null">#{businessType},</if>
            <if test="failReason != null">#{failReason},</if>
            <if test="status != null">#{status},</if>
            <if test="retryTime != null">#{retryTime},</if>
            <if test="executeTime != null">#{executeTime},</if>
            <if test="createId != null">#{createId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateId != null">#{updateId},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateAsyncLog" parameterType="AsyncLog">
        update t_mq_async_log
        <trim prefix="SET" suffixOverrides=",">
            <if test="beanName != null">bean_name = #{beanName},</if>
            <if test="exchangeKey != null">exchange_key = #{exchangeKey},</if>
            <if test="routingKey != null">routing_key = #{routingKey},</if>
            <if test="messageContent != null">message_content = #{messageContent},</if>
            <if test="apiPrefix != null">api_prefix = #{apiPrefix},</if>
            <if test="businessId != null">business_id = #{businessId},</if>
            <if test="businessType != null">business_type = #{businessType},</if>
            <if test="failReason != null">fail_reason = #{failReason},</if>
            <if test="status != null">status = #{status},</if>
            <if test="retryTime != null">retry_time = #{retryTime},</if>
            <if test="executeTime != null">execute_time = #{executeTime},</if>
            <if test="createId != null">create_id = #{createId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateId != null">update_id = #{updateId},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAsyncLogById" parameterType="String">
        delete from t_mq_async_log where id = #{id}
    </delete>

    <delete id="deleteAsyncLogByIds" parameterType="String">
        delete from t_mq_async_log where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="updateAsyncLogRetryTimeById" parameterType="String">
        update t_mq_async_log set retry_time = retry_time + 1 where id = #{id}
    </update>
</mapper>