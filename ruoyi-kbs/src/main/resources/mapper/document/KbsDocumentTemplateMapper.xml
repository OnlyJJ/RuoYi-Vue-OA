<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.kbs.mapper.KbsDocumentTemplateMapper">

    <resultMap type="KbsDocumentTemplate" id="KbsDocumentTemplateResult">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="content" column="content"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createId" column="create_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateId" column="update_id"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectKbsDocumentTemplateVo">
        select id, name, content, del_flag, create_id, create_time, update_id, update_time
        from t_kbs_document_template
    </sql>

    <select id="selectKbsDocumentTemplateList" parameterType="KbsDocumentTemplate"
            resultMap="KbsDocumentTemplateResult">
        <include refid="selectKbsDocumentTemplateVo"/>
        <where>
            <if test="name != null  and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="content != null  and content != ''">and content = #{content}</if>
            <if test="createId != null ">and create_id = #{createId}</if>
        </where>
    </select>

    <select id="selectKbsDocumentTemplateById" parameterType="String" resultMap="KbsDocumentTemplateResult">
        <include refid="selectKbsDocumentTemplateVo"/>
        where id = #{id}
    </select>

    <insert id="insertKbsDocumentTemplate" parameterType="KbsDocumentTemplate">
        insert into t_kbs_document_template
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">id,</if>
            <if test="name != null">name,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="delFlag != null and delFlag != ''">del_flag,</if>
            <if test="createId != null">create_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateId != null">update_id,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="delFlag != null and delFlag != ''">#{delFlag},</if>
            <if test="createId != null">#{createId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateId != null">#{updateId},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateKbsDocumentTemplate" parameterType="KbsDocumentTemplate">
        update t_kbs_document_template
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="delFlag != null and delFlag != ''">del_flag = #{delFlag},</if>
            <if test="createId != null">create_id = #{createId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateId != null">update_id = #{updateId},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <update id="updateDelFlagByIds" parameterType="KbsDocumentTemplateUpdateQo">
        update t_kbs_favorite_group
        set del_flag = #{delFlag}, update_id = #{updateId}, update_time = #{updateTime}
        where id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
</mapper>