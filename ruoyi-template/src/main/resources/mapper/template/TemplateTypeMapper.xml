<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.template.mapper.TemplateTypeMapper">

    <resultMap type="TemplateType" id="TemplateTypeResult">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="sort" column="sort"/>
        <result property="enableFlag" column="enable_flag"/>
        <result property="delFlag" column="del_flag"/>
        <result property="remark" column="remark"/>
        <result property="createId" column="create_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateId" column="update_id"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectTemplateTypeVo">
        select id,
               name,
               sort,
               enable_flag,
               del_flag,
               remark,
               create_id,
               create_time,
               update_id,
               update_time
        from t_template_type
    </sql>

    <select id="selectTemplateTypeList" parameterType="TemplateType" resultMap="TemplateTypeResult">
        <include refid="selectTemplateTypeVo"/>
        <where>
            del_flag = '0'
            <if test="name != null  and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="enableFlag != null  and enableFlag != ''">and enable_flag = #{enableFlag}</if>
        </where>
        order by sort asc, create_time desc
    </select>

    <select id="selectTemplateTypeById" parameterType="String" resultMap="TemplateTypeResult">
        <include refid="selectTemplateTypeVo"/>
        where id = #{id}
    </select>

    <select id="selectTemplateTypeByIds" resultMap="TemplateTypeResult">
        <include refid="selectTemplateTypeVo"/>
        where id in
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
        order by sort asc, create_time desc
    </select>

    <select id="listAllEnabledTemplateType" resultMap="TemplateTypeResult">
        select id, name from t_template_type
        where enable_flag = '1' and del_flag = '0'
        order by sort asc, create_time desc
    </select>

    <select id="selectTemplateTypeByName" resultMap="TemplateTypeResult">
        <include refid="selectTemplateTypeVo"/>
        where del_flag = '0' and name = #{name}
    </select>

    <insert id="insertTemplateType" parameterType="TemplateType">
        insert into t_template_type
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="sort != null">sort,</if>
            <if test="enableFlag != null">enable_flag,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="remark != null">remark,</if>
            <if test="createId != null">create_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateId != null">update_id,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="sort != null">#{sort},</if>
            <if test="enableFlag != null">#{enableFlag},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createId != null">#{createId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateId != null">#{updateId},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateTemplateType" parameterType="TemplateType">
        update t_template_type
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="enableFlag != null">enable_flag = #{enableFlag},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createId != null">create_id = #{createId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateId != null">update_id = #{updateId},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <update id="changeEnableFlag">
        update t_template_type set enable_flag = #{enableFlag} where id = #{id}
    </update>

    <delete id="deleteTemplateTypeById" parameterType="String">
        update t_template_type set del_flag = '1'
        where id = #{id}
    </delete>

    <delete id="deleteTemplateTypeByIds" parameterType="String">
        update t_template_type set del_flag = '1' where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>