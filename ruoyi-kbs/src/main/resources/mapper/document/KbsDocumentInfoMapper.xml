<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.kbs.mapper.KbsDocumentInfoMapper">
    
    <resultMap type="KbsDocumentInfo" id="KbsDocumentInfoResult">
        <result property="id"    column="id"    />
        <result property="docId"    column="doc_id"    />
        <result property="content"    column="content"    />
        <result property="url"    column="url"    />
        <result property="tag"    column="tag"    />
        <result property="picId"    column="pic_id"    />
        <result property="summary"    column="summary"    />
    </resultMap>

    <sql id="selectKbsDocumentInfoVo">
        select id, doc_id, content, url, tag, pic_id, summary from t_kbs_document_info
    </sql>

    <select id="selectKbsDocumentInfoList" parameterType="KbsDocumentInfo" resultMap="KbsDocumentInfoResult">
        <include refid="selectKbsDocumentInfoVo"/>
        <where>  
            <if test="docId != null  and docId != ''"> and doc_id = #{docId}</if>
        </where>
    </select>
    
    <select id="selectKbsDocumentInfoById" parameterType="String" resultMap="KbsDocumentInfoResult">
        <include refid="selectKbsDocumentInfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertKbsDocumentInfo" parameterType="KbsDocumentInfo">
        insert into t_kbs_document_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">id,</if>
            <if test="docId != null">doc_id,</if>
            <if test="content != null">content,</if>
            <if test="url != null">url,</if>
            <if test="tag != null">tag,</if>
            <if test="picId != null">pic_id,</if>
            <if test="summary != null">summary,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">#{id},</if>
            <if test="docId != null">#{docId},</if>
            <if test="content != null">#{content},</if>
            <if test="url != null">#{url},</if>
            <if test="tag != null">#{tag},</if>
            <if test="picId != null">#{picId},</if>
            <if test="summary != null">#{summary},</if>
         </trim>
    </insert>

    <update id="updateKbsDocumentInfo" parameterType="KbsDocumentInfo">
        update t_kbs_document_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="docId != null">doc_id = #{docId},</if>
            <if test="content != null">content = #{content},</if>
            <if test="url != null">url = #{url},</if>
            <if test="tag != null">tag = #{tag},</if>
            <if test="picId != null">pic_id = #{picId},</if>
            <if test="summary != null">summary = #{summary},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteKbsDocumentInfoById" parameterType="String">
        delete from t_kbs_document_info where id = #{id}
    </delete>

    <delete id="deleteKbsDocumentInfoByIds" parameterType="String">
        delete from t_kbs_document_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteKbsDocumentInfoByDocIds" parameterType="String">
        delete from t_kbs_document_info where doc_id in
        <foreach item="docId" collection="array" open="(" separator="," close=")">
            #{docId}
        </foreach>
    </delete>
</mapper>