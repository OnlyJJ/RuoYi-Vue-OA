<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.kbs.mapper.KbsFavoriteGroupMapper">

    <resultMap type="KbsFavoriteGroup" id="KbsFavoriteGroupResult">
        <result property="id" column="id"/>
        <result property="sort" column="sort"/>
        <result property="name" column="name"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createId" column="create_id"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateId" column="update_id"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectKbsFavoriteGroupVo">
        select id,
               sort,
               name,
               del_flag,
               create_id,
               create_by,
               create_time,
               update_id,
               update_by,
               update_time
        from t_kbs_favorite_group
    </sql>

    <select id="selectKbsFavoriteGroupList" parameterType="KbsFavoriteGroup" resultMap="KbsFavoriteGroupResult">
        <include refid="selectKbsFavoriteGroupVo"/>
        <where>
            <if test="name != null  and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="createId != null ">and create_id = #{createId}</if>
        </where>
    </select>

    <select id="selectKbsFavoriteGroupById" parameterType="String" resultMap="KbsFavoriteGroupResult">
        <include refid="selectKbsFavoriteGroupVo"/>
        where id = #{id}
    </select>

    <insert id="insertKbsFavoriteGroup" parameterType="KbsFavoriteGroup">
        insert into t_kbs_favorite_group
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">id,</if>
            <if test="sort != null">sort,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="delFlag != null and delFlag != ''">del_flag,</if>
            <if test="createId != null">create_id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateId != null">update_id,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">#{id},</if>
            <if test="sort != null">#{sort},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="delFlag != null and delFlag != ''">#{delFlag},</if>
            <if test="createId != null">#{createId},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateId != null">#{updateId},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateKbsFavoriteGroup" parameterType="KbsFavoriteGroup">
        update t_kbs_favorite_group
        <trim prefix="SET" suffixOverrides=",">
            <if test="sort != null">sort = #{sort},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="delFlag != null and delFlag != ''">del_flag = #{delFlag},</if>
            <if test="createId != null">create_id = #{createId},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateId != null">update_id = #{updateId},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <select id="selectGroupSelectList" parameterType="String" resultType="KbsFavoriteGroupOption">
        select id groupId,
               name groupName
        from t_kbs_favorite_group
        where del_flag = '0' and create_id = #{createId}
        order by sort, create_time
    </select>

    <select id="selectKbsFavoriteGroupByIds" parameterType="List" resultMap="KbsFavoriteGroupResult">
        <include refid="selectKbsFavoriteGroupVo"/>
        where del_flag = '0' and id in
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
        order by sort, create_time
    </select>

    <update id="updateDelFlagByIds" parameterType="KbsFavoriteGroupUpdateQo">
        update t_kbs_favorite_group
        set del_flag = #{delFlag}, update_id = #{updateId}, update_by = #{updateBy}, update_time = #{updateTime}
        where id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
</mapper>